# =======================================
# Alif24 Platform - Production Environment
# VDS Deploy uchun to'liq konfiguratsiya
# =======================================
# BU FAYLNI .env GA NUSXALANG:
# cp .env.production.example .env
#
# KEYIN O'Z KALITLARINGIZNI QO'YING!
# =======================================

# =======================================
# 1. DATABASE (MAJBURIY)
# =======================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=alif24
DATABASE_URL=postgresql://alif24_user:STRONG_PASSWORD_HERE@localhost:5432/alif24_db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# =======================================
# 2. JWT SECURITY (MAJBURIY)
# =======================================
JWT_SECRET=CHANGE_THIS_TO_RANDOM_64_CHAR_HEX_STRING
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_RANDOM_64_CHAR_HEX_STRING
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
JWT_ALGORITHM=HS256

# =======================================
# 3. OPENAI / AZURE AI (MAJBURIY)
# =======================================
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4

AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=YOUR_ACCOUNT;AccountKey=YOUR_KEY;EndpointSuffix=core.windows.net
AZURE_CONTAINER_NAME=audiostories

AZURE_SPEECH_KEY=your-azure-speech-key-here
AZURE_SPEECH_REGION=eastus

AZURE_OPENAI_KEY=your-azure-openai-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_REGION=eastus
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-01

# =======================================
# 4. CORS / SERVER
# =======================================
CORS_ORIGINS=https://alif24.uz,https://www.alif24.uz,https://api.alif24.uz
DEBUG=false
NODE_ENV=production
LOG_LEVEL=info
API_PREFIX=/api/v1

# =======================================
# 5. TELEGRAM BOT (Phone Verification)
# =======================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_CHAT_ID=your-admin-chat-id

# =======================================
# 6. ADMIN PANEL (ROLE KEYS)
# /hazratqul - Super Admin (barcha huquqlar)
# /nurali - Moderator (users, content)
# /pedagog - Teacher Admin (teachers, lessons)
# =======================================
ADMIN_HAZRATQUL_KEY=your_hazratqul_secret_key_here
ADMIN_NURALI_KEY=your_nurali_secret_key_here
ADMIN_PEDAGOG_KEY=your_pedagog_secret_key_here

# Legacy admin key
ADMIN_SECRET_KEY=your_legacy_admin_secret_key

# =======================================
# 7. NOTIFICATION SERVICES (SMS, Email)
# =======================================
ESKIZ_EMAIL=your_eskiz_email@example.com
ESKIZ_PASSWORD=your_eskiz_password

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_TLS=true
SMTP_SSL=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAILS_FROM_EMAIL=info@alif24.uz
EMAILS_FROM_NAME=Alif24 Platform
EMAILS_ENABLED=true

# =======================================
# 8. REDIS (optional)
# =======================================
# REDIS_URL=redis://localhost:6379/0

# =======================================
# 9. SERVICE PORTS (Microservices)
# =======================================
MAINPLATFORM_PORT=8000
HARF_PORT=8001
TESTAI_PORT=8002
CRM_PORT=8003
GAMES_PORT=8004
OLIMP_PORT=8005
LESSIONS_PORT=8006

# =======================================
# 10. PAYMENT SYSTEM (Click, Payme)
# =======================================
CLICK_SERVICE_ID=your_click_service_id
CLICK_MERCHANT_ID=your_click_merchant_id
CLICK_SECRET_KEY=your_click_secret_key

PAYME_MERCHANT_ID=your_payme_merchant_id
PAYME_KEY=your_payme_key
PAYME_TEST_MODE=false

# =======================================
# 11. FILE STORAGE / AVATAR UPLOAD
# =======================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# =======================================
# 12. MONITORING / HEALTH CHECKS
# =======================================
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false

# =======================================
# 13. PGADMIN (Database Management)
# =======================================
PGADMIN_EMAIL=admin@alif24.uz
PGADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD
